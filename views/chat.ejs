<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <title>Real-Time Chat App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
  <link rel="icon" href="/favicon.png" type="image/png">

  <script src="https://cdn.tailwindcss.com"></script>
  <script>tailwind.config = { darkMode: 'class' }</script>
</head>
<body class="bg-zinc-900 text-white h-screen flex flex-col">

  <!-- Header -->
  <div class="bg-zinc-800 p-4 flex justify-between items-center">
    <div class="text-2xl font-bold text-emerald-400">ðŸ’¬ Real-Time Chat</div>
    <button id="toggleSidebar" class="md:hidden text-white text-xl">â˜°</button>
  </div>

  <div class="flex flex-1 overflow-hidden">
    <!-- Sidebar -->
    <aside id="sidebar" class="w-64 bg-zinc-800 p-4 space-y-2 hidden md:block">
      <div class="text-lg font-bold mb-2">ðŸŸ¢ Active Users</div>
      <ul id="userList" class="space-y-1 text-sm"></ul>
    </aside>

    <!-- Chat area -->
    <main class="flex-1 flex flex-col">
      <ul id="messages" class="flex-1 overflow-y-auto p-4 space-y-2"></ul>

      <form id="form" class="flex flex-wrap p-4 bg-zinc-800 gap-2 items-center">
        <input id="input" autocomplete="off" placeholder="Type your message..."
          class="flex-1 px-4 py-2 rounded bg-zinc-900 border border-zinc-700 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500" />
        <button type="submit" class="bg-emerald-600 px-4 py-2 rounded hover:bg-emerald-700">Send</button>
        <button type="button" id="uploadBtn"
          class="bg-blue-600 px-3 py-2 rounded hover:bg-blue-700 text-white">ðŸ“Ž Upload</button>
        <input type="file" id="fileInput" hidden />
      </form>
    </main>
  </div>

  <!-- Username Modal -->
  <div id="usernameModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50">
    <div class="bg-zinc-800 p-6 rounded-lg w-80 space-y-4 shadow-lg">
      <h2 class="text-xl font-semibold text-white text-center">Enter your name</h2>
      <input id="usernameInput" type="text" placeholder="Your name"
        class="w-full px-4 py-2 rounded bg-zinc-900 text-white border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-emerald-500" />
      <button id="enterChatBtn"
        class="w-full bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded">Join Chat</button>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
  <script>
    document.getElementById('toggleSidebar').addEventListener('click', () => {
      document.getElementById('sidebar').classList.toggle('hidden');
    });
  </script>
</body>
</html>
